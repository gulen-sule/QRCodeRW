<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/buttonController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="18dp"
            android:fontFamily="@font/artifika"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:text="Controller"
            android:textColor="#010729"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="20dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="18dp"
            android:fontFamily="@font/artifika"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:text="User"
            android:textColor="#010729"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="16sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonController"
            app:layout_constraintStart_toStartOf="@+id/buttonController"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="332dp"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/buttonController"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="false"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/logo" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>